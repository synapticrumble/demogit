    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": true,
            "console": "externalTerminal"
        },
        {
            "name": "Python Module",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/my_package",
            "console": "integratedTerminal",
            "module": "my_package",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/env_files/.env"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": true,
            "console": "integratedTerminal"
        }
    ]
